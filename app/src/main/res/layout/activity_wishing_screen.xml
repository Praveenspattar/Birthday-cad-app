<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".WishingScreen">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/finalImage"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="46dp">
    <ImageView
        android:id="@+id/birthdaybackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/birth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sprinkles"
        app:layout_constraintTop_toTopOf="@+id/birthdaybackground"
        app:layout_constraintStart_toStartOf="@+id/birthdaybackground"
        app:layout_constraintEnd_toEndOf="@+id/birthdaybackground"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Praveen"
        android:background="@drawable/button"
        android:textAlignment="center"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="78dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="@+id/birthdaybackground"
        app:layout_constraintBottom_toBottomOf="@+id/birthdaybackground"
        app:layout_constraintEnd_toEndOf="@+id/birthdaybackground"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <Button
      android:id="@+id/share"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginStart="26dp"
      android:layout_marginEnd="26dp"
      android:layout_marginBottom="47dp"
      android:background="@drawable/button"
      android:text="SHARE"
      android:fontFamily="@font/poppins_bold"
      android:textSize="20dp"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
